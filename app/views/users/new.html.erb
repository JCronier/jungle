<section>
  <header class="page-header">
    <h1>Sign Up</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

        <div class="form-group">
          <%= form_for :user, url: '/users' do |f| %>

          <% if @user %>
            <div class="alert alert-danger">
              <strong>Sign up errors:</strong>
              <ul>
                <% @user.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

            <div class="form-group">
              <strong>Name</strong> <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
            <strong>Email</strong> <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
            <strong>Password</strong> <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group">
            <strong>Password Confirmation</strong> <%= f.password_field :password_confirmation, class: 'form-control' %></div>

          <%= f.submit "Submit" , class: 'btn btn-primary' %>

          <% end %>
        </div>
    </div>
  </div>

</section>