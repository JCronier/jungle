<section>
  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

        <div class="form-group">
          <%= form_for :user, url: '/login' do |form|%>

          <% if @session && @session[:error] %>
            <div class="alert alert-danger">
              <strong>Login error:</strong>
              <ul>
                <li><%= @session[:error] %></li>
              </ul>
            </div>
          <% end %>

            <div class="form-group">Email: <%= form.text_field :email, class: "form-control" %></div>
            <div class="form-group">Password: <%= form.password_field :password, class: "form-control" %></div>

          <%= form.submit "Submit" , class: 'btn btn-primary' %>

          <% end %>
        </div>
    </div>
  </div>

</section>